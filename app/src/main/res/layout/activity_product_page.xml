<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductPage"
    android:background="#FFFFFF">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/txtPPImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="80dp"
                android:src="@mipmap/ic_launcher_round"
                />


    <TextView
        android:id="@+id/txtPPName"
        android:visibility="invisible"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"

        android:text="Product Name"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginLeft="60dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lineeee"
        android:text="__________________________________________"
        android:textSize="40dp"
        android:layout_marginTop="340dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:textColor="#FE8D9E"
        />



    <TextView
        android:id="@+id/txtPPDiscription"
        android:textColor="#000000"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text="Product Discription"
        android:textSize="27dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/sitePPButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/followPPButton"
        android:backgroundTint="#FF8E9F"
        android:text="WEBSITE"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/followPPButton"
        android:text="CONTACT"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF8E9F"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/savePPButton"
        android:text="MAP"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FF8E9F"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/followPPButton"
        />




            <TextView
                android:id="@+id/txtPPPrice"

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:fontFamily="@font/notoserifvithkuqivariablefontwght"

                android:text="Product Price"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="40dp"
                android:layout_marginLeft="60dp"/>

    <TextView
        android:id="@+id/txtPhone"

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:layout_below="@id/txtPPPrice"
        android:text="4059876545"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginLeft="60dp"/>




    <TextView
        android:id="@+id/txtPPPercentOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#FE8D9E"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"


        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text=""
        android:textSize="35dp"
        android:textStyle="bold" />



</RelativeLayout>