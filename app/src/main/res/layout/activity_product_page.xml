<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductPage"
    android:background="#FFFFFF">


            <ImageView
                android:id="@+id/txtPPImage"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher_round"
                />


    <!--  Event Name  XML file-->
            <TextView
                android:id="@+id/txtPPName"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="325dp"
                android:fontFamily="@font/notoserifvithkuqivariablefontwght"

                android:text="Event Name"
                android:textColor="#000000"

                android:textSize="40dp"
                android:layout_marginLeft="20dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lineeee"
        android:text="__________________________________________"
        android:textSize="40dp"
        android:layout_marginTop="340dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FE8D9E"
        />

    <!--  Event Price -->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:id="@+id/free"
        android:src="@drawable/free"
        android:layout_alignParentRight="true"
        />


    <!--  Event Description -->
    <TextView
        android:id="@+id/txtPPDiscription"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineeee"

        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text="Event Description"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <!--  View Host -->
    <Button
        android:id="@+id/sitePPButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/followPPButton"
        android:backgroundTint="#FF8E9F"
        android:text="VIEW HOST"
        android:textColor="#FFFFFF" />

    <!--  Attend -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/followPPButton"
        android:text="ATTEND"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF8E9F"
        />

    <!--  Save -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/savePPButton"
        android:text="SAVE"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FF8E9F"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/followPPButton"
        />




    <!--  Event Location -->
            <TextView
                android:id="@+id/txtPPPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="325dp"

                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/notoserifvithkuqivariablefontwght"

                android:text="Event Location"

                android:textSize="35dp"/>


    <TextView
        android:id="@+id/txtPPPercentOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#FE8D9E"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"


        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text=""
        android:textSize="35dp"
        android:textStyle="bold" />



</RelativeLayout>