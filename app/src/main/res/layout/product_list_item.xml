<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:cardCornerRadius="25dp"
    android:elevation="50dp"
    android:layout_margin="30dp"
    android:backgroundTint="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="#FFFFFF">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/txtImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ranchbackground" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_local_shipping_24"
            android:id="@+id/pickUpImage">

        </ImageView>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txtImage"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtName"
            android:text="Product Price"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txtSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Product Seller"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txtImage"
            android:textStyle="italic"
            android:textColor="#E0B05F"
            android:textColorHint="#E0B05F"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght" />

        <TextView
            android:id="@+id/txtPercentOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPrice"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:text="07/05/24"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPrice"
            android:layout_marginTop="10dp"
            android:text="Accept"
            android:backgroundTint="#E0B05F"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnDecline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPrice"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btnAccept"
            android:layout_marginLeft="10dp"
            android:text="Decline"
            android:backgroundTint="#011B22"
            android:textColor="#E0B05F" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>
