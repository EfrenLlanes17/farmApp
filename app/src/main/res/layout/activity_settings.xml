<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings"
    android:background="#FFFFFF">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Become A Partner                                                    "
        android:id="@+id/becomeAPartner"
        android:textColor="#FF8E9F"
        android:textSize="17dp"
        android:backgroundTint="#FFFFFF"
        android:layout_above="@id/termsOfServices"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms Of Service                                                    "
        android:id="@+id/termsOfServices"
        android:textColor="#FF8E9F"
        android:textSize="17dp"
        android:backgroundTint="#FFFFFF"
        android:layout_above="@id/privacyPolicy"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Policy                                                         "
        android:id="@+id/privacyPolicy"
        android:textColor="#FF8E9F"
        android:textSize="17dp"
        android:backgroundTint="#FFFFFF"
        android:layout_above="@id/bugReport"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report A Problem                                                  "
        android:id="@+id/bugReport"
        android:textColor="#FF8E9F"
        android:textSize="17dp"
        android:backgroundTint="#FFFFFF"
        android:layout_above="@id/SignOut"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out                                                                  "
        android:id="@+id/SignOut"
        android:textColor="#FF8E9F"
        android:textSize="17dp"
        android:backgroundTint="#FFFFFF"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/bugReportCard"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#FFFFFF"
        android:elevation="30dp"
        app:cardCornerRadius="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:text="Report A Problem"
            android:textColor="#FD8C9D"
            android:textSize="25dp" />

        <EditText

            android:id="@+id/edtTxtBug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:hint="         Discribe the Problem"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="#FD8C9D"
            android:textColorHint="#FD8C9D"
            android:textSize="20dp" />


        <Button
            android:id="@+id/bugSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="190dp"
            android:backgroundTint="#FD8C9D"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:text="SUBMIT"
            android:textColor="#FFFFFF" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/partnerCard"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#FFFFFF"
        android:elevation="30dp"
        app:cardCornerRadius="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:text="Become A Partner"
            android:textColor="#FD8C9D"
            android:textSize="25dp" />

        <EditText

            android:id="@+id/partnerNameTxtBug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:hint="             Company Name"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="#FD8C9D"
            android:textColorHint="#FD8C9D"
            android:textSize="20dp" />

        <EditText

            android:id="@+id/partnerEmailTxtBug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:hint="             Company Email"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="#FD8C9D"
            android:textColorHint="#FD8C9D"
            android:textSize="20dp" />

        <EditText

            android:id="@+id/partnerPhoneTxtBug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:hint="             Company Phone"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="#FD8C9D"
            android:textColorHint="#FD8C9D"
            android:textSize="20dp" />


        <Button
            android:id="@+id/partnerSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="270dp"
            android:backgroundTint="#FD8C9D"
            android:fontFamily="@font/notoserifvithkuqivariablefontwght"
            android:text="SUBMIT"
            android:textColor="#FFFFFF" />

    </androidx.cardview.widget.CardView>





</RelativeLayout>